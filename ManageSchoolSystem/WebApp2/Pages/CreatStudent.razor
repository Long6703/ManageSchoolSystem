@using gPRCContracts
@using AutoMapper
@inject IUserService UserService
@inject IMapper _mapper


<div class="container">
    <div>
        <div>
            <h3>Create New Student</h3>
            <div class="form-group">
                <label for="displayName">Display Name:</label>
                <input id="displayName" type="text" class="form-control" @bind=newUserEditModel.DisplayName />
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input id="email" type="email" class="form-control" @bind=newUserEditModel.Email />
            </div>
            <div class="form-group">
                <label for="classSelect">Class Name:</label>
                <select id="classSelect" class="form-control" @bind="newUserEditModel.ClassName">
                    @foreach (var classs in Classs)
                    {
                        <option value="@classs.ClassName">@classs.ClassName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number:</label>
                <input id="phoneNumber" type="tel" class="form-control" @bind=newUserEditModel.PhoneNumber />
            </div>
            <div style="margin: 30px auto">
                <button @onclick="CreateUser" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>



