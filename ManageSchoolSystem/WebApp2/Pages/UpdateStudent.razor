@using gPRCContracts
@using AutoMapper
@inject IUserService UserService
@inject IMapper _mapper


<div class="container">
    <div>
        <div>
            <h3>Update Student</h3>
            <div class="form-group">
                <label for="displayName">Display Name:</label>
                <input id="displayName" type="text" class="form-control" @bind=userViewModel.DisplayName />
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input id="email" type="email" class="form-control" @bind=userViewModel.Email />
            </div>
            <div class="form-group">
                <label for="classSelect">Class Name:</label>
                <select id="classSelect" class="form-control" @bind="userViewModel.ClassName">
                    @foreach (var classs in Classs)
                    {
                        <option value="@classs.ClassName" selected="@(classs.ClassName == userViewModel.ClassName ? "selected" : null)">@classs.ClassName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number:</label>
                <input id="phoneNumber" type="tel" class="form-control" @bind=userViewModel.PhoneNumber />
            </div>
            <div style="margin:20px auto">
                <button class="btn btn-primary" @onclick="updateUser">Update</button>
            </div>
        </div>
    </div>
</div>
